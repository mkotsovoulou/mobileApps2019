<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. https://developer.android.com/reference/android/R.styleable#Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <!--<item name="android:fontFamily">sans-serif</item>-->
        <!--<item name="fontFamily">sans-serif</item>-->
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. https://developer.android.com/reference/android/R.styleable#Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <!--<item name="android:fontFamily">sans-serif</item>-->
        <!--<item name="fontFamily">sans-serif</item>-->
    </style>

    <style name="MainMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- this style inherits all characteristics from MainMenuText and overrides background and text colors -->
    <style name="seondaryText" parent="MainMenuText">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

</resources>


